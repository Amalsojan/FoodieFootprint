{
  "manifest_version": 3,
  "name": "FoodieFootprint",
  "version": "1.0",
  "description": "Track your food trends on Zomato and Swiggy.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.zomato.com/*",
    "https://www.swiggy.com/*"
  ],
  "action": {
    "default_title": "Open Dashboard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.zomato.com/*",
        "https://www.swiggy.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}